<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.android.quizzapp.start_quiz">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/quiz"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="HOW OLD ARE YOU ?"
        android:textStyle="bold"
        android:textColor="#212121"
        android:id="@+id/quest1" />

    <RadioButton
        android:id="@+id/age1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/quest1"
        android:text="13 years and under" />
    <RadioButton
        android:id="@+id/age2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/age1"
        android:text="14-18"/>

    <RadioButton
        android:id="@+id/age3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/age2"
        android:text="19-25" />
    <RadioButton
        android:id="@+id/age4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/age3"
        android:text="26 and above" />

    <TextView
        android:id="@+id/quest2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/age4"
        android:text="What is your gender?"
        android:textColor="#212121"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <RadioButton
        android:id="@+id/gender1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quest2"
        android:layout_marginTop="10dp"
        android:text="Male"/>
    <RadioButton
        android:id="@+id/gender2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender1"
        android:layout_marginTop="10dp"
        android:text="Female"/>
</RelativeLayout>
</ScrollView>
